<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:p4="http://xamarin.com/mono/android/designer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark">
    <LinearLayout
        android:orientation="vertical"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/MusicMainLayout">
        <RelativeLayout
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@color/colorPrimaryDark">
            <ImageView
                android:src="@drawable/return_icon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="5dp"
                android:id="@+id/MusicReturnButton"
                android:contentDescription=""
                android:layout_alignParentLeft="true"
                android:scaleType="centerInside"
                android:background="@drawable/ripple_rect_primarydark"/>
        </RelativeLayout>
        <TextView
            android:text="某首音乐"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:textSize="30dp"
            android:textColor="@android:color/white"
            android:textAlignment="center"
            android:gravity="bottom"
            android:id="@+id/MusicTitle" />
        <TextView
            android:text="某位歌手 / 某张专辑"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:textSize="10dp"
            android:textColor="@android:color/white"
            android:textAlignment="center"
            android:gravity="center"
            android:id="@+id/MusicDetail" />
    </LinearLayout>
    <ImageView
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:id="@+id/MusicCover"
        android:layout_centerInParent="true"
        android:src="@drawable/default_cover"
        android:contentDescription="" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp">
            <ImageView
                android:src="@drawable/add_icon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="90dp"
                android:minWidth="25px"
                android:minHeight="25px"
                android:id="@+id/MusicAddButton"
                android:layout_alignParentLeft="true"
                android:background="@drawable/ripple_rect_primarydark"
                android:contentDescription="" />
            <ImageView
                android:src="@drawable/list_loop_icon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginTop="20dp"
                android:minWidth="25px"
                android:minHeight="25px"
                android:id="@+id/MusicPlayModeButton"
                android:layout_centerInParent="true"
                android:background="@drawable/ripple_rect_primarydark"
                android:contentDescription="" />
            <ImageView
                android:src="@drawable/menu_icon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="90dp"
                android:minWidth="25px"
                android:minHeight="25px"
                android:id="@+id/MusicMenuButton"
                android:layout_alignParentRight="true"
                android:background="@drawable/ripple_rect_primarydark"
                android:contentDescription="" />
        </RelativeLayout>
        <SeekBar
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:id="@+id/MusicSeekBar" />
        <LinearLayout
            android:orientation="horizontal"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_alignParentBottom="true"
            android:id="@+id/MusicListControlPane"
            android:background="@drawable/ripple_rect">
            <RelativeLayout
                android:minWidth="25px"
                android:minHeight="25px"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorPrimaryDark">
                <android.support.design.widget.FloatingActionButton
                    android:src="@drawable/music_previous_icon"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="80dp"
                    android:background="@color/button_material_dark"
                    app:rippleColor="@color/colorPrimaryDark"
                    android:layout_alignParentLeft="true"
                    android:id="@+id/MusicControlPanePreviousButton"/>
                <android.support.design.widget.FloatingActionButton
                    android:src="@drawable/music_play_icon"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_margin="10dp"
                    android:background="@color/button_material_dark"
                    app:rippleColor="@color/colorPrimaryDark"
                    android:layout_centerInParent="true"
                    android:id="@+id/MusicControlPanePlayButton"/>
                <android.support.design.widget.FloatingActionButton
                    android:src="@drawable/music_next_icon"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="80dp"
                    android:background="@color/button_material_dark"
                    app:rippleColor="@color/colorPrimaryDark"
                    android:layout_alignParentRight="true"
                    android:id="@+id/MusicControlPaneNextButton"/>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
